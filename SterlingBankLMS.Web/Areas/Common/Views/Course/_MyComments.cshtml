                    {
                        $('div [class=zoneReply_' + ComID + ']').remove();
                    }

                    var selReply = $("<div>").addClass('zoneReply_' + ComID);

                    selReply.append(response);
                    selReply.prependTo($('.ReplayComments_' + ComID));

