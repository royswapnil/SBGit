<script type="text/javascript">

    $(document).ready(function () {
        postId = 0;
        //Get All ReplyComment
        $('.Reply').on('click', function () {

            var ComID = $(this).attr('data-id');

           @*$.ajax({

                type: 'GET',
                url: '@Url.Action("GetParentComments", "Comments")',
                data: { ComID },
