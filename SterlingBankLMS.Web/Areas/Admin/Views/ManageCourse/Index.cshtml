                    <i class="material-icons">library_add</i>
                    <span>Course Bulk Upload</span>
                </div>
            </div>
        </a>


        <a href="/Admin/ManageCourse/LearningArea" class="addNewLearningArea">
            <div class="bigMenu1">
                <div class="smallMenu1">
                    <i class="material-icons">folder_open</i>
                    <span>New Learning Area</span>
                </div>
            </div>
        </a>



        <a href="/Admin/LearningGroup" class="addNewLearnerGroup">
            <div class="bigMenu1">
                <div class="smallMenu1">
                    <i class="material-icons">folder</i>
