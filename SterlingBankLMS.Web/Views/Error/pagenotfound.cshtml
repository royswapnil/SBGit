@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Page not found - Sterling Bank Learning Management System</title>
    <style>
        .fourohfour button {
            padding: 15px;
            width: 150px;
            color: #ab192d;
            background: transparent;
            border: 2px solid #ab192d;
            margin-left: 46%;
            cursor: pointer
        }

        .fourohfour {
            width: 100%;
            position: fixed;
            height: 100vh;
            background: #f2f2f2;
            float: left;
            z-index: 10;
            top: 0;
            left: 0;
        }

            .fourohfour img {
                width: 30%;
                margin-left: 33%;
                margin-top: 80px;
                float: left;
            }

        .bigNum {
            width: 97%;
            font-weight: bold;
            font-size: 30px;
            text-align: center;
            float: left;
            margin-top: -100px;
            box-sizing: border-box;
           
        }

        .smallNum {
            width: 97%;
            font-weight: bold;
            font-size: 20px;
            text-align: center;
            float: left;
            margin-top: -60px;
            box-sizing: border-box;
        }
        .fourohfour button {
            width: 10%;
            margin-left: 43%;
        }

        @@media (max-width: 600px) {
            .fourohfour img {
                width: 59%;
                margin-left: 20%;
            }

            .bigNum {
                margin-top: -30px;
            }

            .smallNum {
                margin-top: 0px;
            }

            .fourohfour button {
                margin-top: 50px;
                margin-left: 40%;
            }
        }

        @@media (max-width: 400px) {
            .fourohfour button {
                margin-left: 30%;
            }
        }
    </style>
</head>

<body style="min-height: 100vh;">
    <div class="fourohfour">
        <img src="~/content/img/404.png" alt="">

        <div class="bigNum">PAGE NOT FOUND!</div>
        <div class="smallNum" >Sorry the page you were looking for doesn't exist.</div>
        <button class="btn" onclick="window.history.back() || window.location.assign('@Url.Content("~/")')">GO BACK</button>
    </div>
</body>
</html>